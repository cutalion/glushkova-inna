%label{:class => "label"}= t("activerecord.attributes.admin_album.title", :default => t("activerecord.labels.title", :default => "Title")) + ":"
%p= @album.title
%label{:class => "label"}= t("activerecord.attributes.admin_album.description", :default => t("activerecord.labels.description", :default => "Description")) + ":"
%p= @album.description

.form-actions
  = link_to "Back", admin_albums_path, :class => 'btn'
  = link_to "Edit", edit_admin_album_path(@album), :class => 'btn'
  = link_to "Delete", admin_album_path(@album), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn'

!!! 5
%html{:lang => "ru"}
  %head
    %meta{:charset => "utf-8"}/
    = display_meta_tags :site => 'Инна Глушкова. Фотограф'
    = csrf_meta_tags

    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body
    .navbar.navbar-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Инна Глушкова. Фотограф", root_path, :class => :brand
          -# .container.nav-collapse
          -#   %ul.nav
          -#     %li= link_to "About me", "#"

    .container

      .content
        .row
          .span9
            = yield
          .span1 &nbsp;
          .span3.sidebar
            %ul
              - Album.all.each do |album|
                %li{ :class => ("current" if album == @album) }
                  = link_to album, [album, :photos]

            %h2 Контакты
            %ul.unstyled
              %li
                %strong Телефон:
                (095) 303-63-21
              %li 
                %strong E-mail:
                kuakugawa@gmail.com
              %li 
                %strong Skype:
                kuakugawa

    
      %footer
        %p &copy; Глушкова Инна 2012

      = render_google_analitics

- set_meta_tags :title => 'Альбомы'


- if @albums.any?
  - @albums.in_groups_of(3, false) do |group|
    .row
      - group.each do |album|
        .span3.album_cover
          = link_to [album, :photos] do
            = image_tag album.cover.image.thumb.url if album.photos.any?
            %span= album.title
- else 
  %p There are no albums yet.
